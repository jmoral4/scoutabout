@model Web.Models.Guide

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>Guide</legend>

    <div class="display-label">Activities</div>
    <div class="display-field">@(Model.Activities == null ? "None" : Model.Activities.Count.ToString())</div>

    <div class="display-label">Title</div>
    <div class="display-field">@Model.Title</div>

    <div class="display-label">Summary</div>
    <div class="display-field">@Model.Summary</div>

    <div class="display-label">Likes</div>
    <div class="display-field">@Model.Likes</div>

    <div class="display-label">Follow</div>
    <div class="display-field">@Model.Follow</div>

    <div class="display-label">Shares</div>
    <div class="display-field">@Model.Shares</div>

    <div class="display-label">Author</div>
    <div class="display-field">@(Model.Author == null ? "None" : Model.Author.Name)</div>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}


