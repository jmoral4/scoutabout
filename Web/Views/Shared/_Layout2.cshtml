@using System.Web.Optimization
@using System.Web.UI.WebControls
@using NavigationRoutes
@using Web.Utilities
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>@ViewBag.Title</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" type="text/css" href="http://fonts.googleapis.com/css?family=Quicksand">
  @Styles.Render("~/Content/bootstrap")
  @Styles.Render("~/Content/scoutabout")
  @RenderSection("head", required: false)
  @* favicons and touch icons go here *@
  @Scripts.Render("~/bundles/modernizr")
  @Scripts.Render("~/bundles/jquery")
</head>
<body>
  <div class="navbar navbar-inverse navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container">
        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </a>
        <div class="brand common-font">
          <a style="text-decoration: none;" href="/" title="Scout About">
            @Html.ImageActionLink(Url.Content("/Content/images/scoutaboutlogo.png"),"Logo","Index","Home",null,new{style="margin:0;padding:0;"},new{style="margin:0;padding:0;height:40px;width:auto"})
          </a>
        </div>
        <div class="nav-collapse collapse">
          <ul class="nav">
            @Html.Navigation()
          </ul>
        </div>
        <div class="nav-collapse collapse" style="float: right;">
          <section id="login">
            @Html.Partial("_LoginPartial")
          </section>
        </div>
      </div>
    </div>
  </div>
  <div style="width: 80%; margin: auto; background-color: #9f9f9f">
    <div class="container">
      @Html.Partial("_alerts")
      @Html.Partial("_validationSummary")

      @RenderBody()
      <hr style="padding-left: 20px; padding-right: 20px; margin-bottom: 0">
      <footer>
        <div style="float: right; margin: 5px">
          <div>
            <a href="http://instagram.com/scoutaboutusa?ref=badge" target="_blank" class="ig-b- ig-b-v-24">
              <img src="//badges.instagram.com/static/images/ig-badge-view-24.png" alt="Instagram" /></a>
          </div>
          <div><a href="https://twitter.com/ScoutaboutUSA" class="twitter-follow-button" data-show-count="false"></a></div>
          <div class="fb-like" data-href="https://www.facebook.com/ScoutaboutUsa" data-layout="button_count" data-show-faces="false" data-width="450"></div>
        </div>
        <div style="float: left; color: white; padding-left: 15px;">
        </div>
        <center>
          <p class="textLabel">&copy; North Technologies, LLC @System.DateTime.Now.ToString("yyyy")</p>
        </center>
      </footer>
    </div>
  </div>
  @Scripts.Render("~/bundles/bootstrap")
  <div id="fb-root"></div>
  <script type="text/javascript">
    (function (d, s, id) {
      var js, fjs = d.getElementsByTagName(s)[0];
      if (d.getElementById(id)) return;
      js = d.createElement(s); js.id = id;
      js.src = "//connect.facebook.net/en_US/all.js#xfbml=1";
      fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));
    !function (d, s, id) { var js, fjs = d.getElementsByTagName(s)[0]; if (!d.getElementById(id)) { js = d.createElement(s); js.id = id; js.src = "//platform.twitter.com/widgets.js"; fjs.parentNode.insertBefore(js, fjs); } }(document, "script", "twitter-wjs");
  </script>
  @RenderSection("Scripts", required: false)
</body>
</html>

